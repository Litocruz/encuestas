<% provide(:title, question_group.new_record? ? "Nueva Encuesta" : "Editar Encuesta") %>

<div class="page-header">
  <h1 class="pull-left"><%= question_group.new_record? ? "Nueva Encuesta" : "Editar Encuesta" %></h1>
</div>

<%= form_for question_group do |f| %>
  <%- if question_group.errors.any? %>
    <ul>
      <%- question_group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label "Nombre" %>
  <%= f.text_field :name %><br />
  <%# f.hidden_field :user_id, value:  %>
  <%= f.submit "Guardar", class: "btn btn-primary" %>


<% end %>
